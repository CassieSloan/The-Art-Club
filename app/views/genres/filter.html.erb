<!-- insert nav bar here -->

<div id="genre-filter">
    <%= render "/nav_bar" %>

    <div class="heading">
        <h1>Sort by genre</h1>
    </div>

    <%= render "/back_button" %>

    <nav class="category-search">
        <div class="nav-element">
            <% @genres_all.each do |genre| %>
                <%=link_to genre_path(genre.id), :class => "link-to" do %>
                <p><%=genre.title%></p>
                <%end%>
            <%end%>
        </div>
    </nav>  

    <div class="flexbox">
        <% @genre.contents.each do |content| %>
            <div class="listings">
                <%= image_tag content.pic if content.pic.attached? %>
                <h2><%= content.title %></h2>
                <p><%= number_to_currency(content.price / 100.0) %></p>
            </div>
        <%end%> 
    </div>
</div>