<main id="artist-index">

    <%= render "/nav_bar" %>

    <div class="heading">
        <h1>Artists</h1>
    </div>

    <%= render "/back_button" %>
    
    <nav class="category-search">
        <div class="nav-element">
            <p><%= link_to "genre", genres_path,  :class => "link-to" %></p>
            <p><%= link_to "artist", artists_path, :class => "link-to"%></p>
            <p><%= link_to "medium", mediums_path, :class => "link-to"%></p>
            <p><%= link_to "all", results_all_path, :class => "link-to"%></p>

        </div>
    </nav>    

    <div class="flexbox">
        <% @artists_all.each do |artist| %>
            <div class="listings">
                <%=link_to profile_id_path(artist), class: "link-to" do %>
                <%= image_tag artist.pic if artist.pic.attached? %>
                <h2><%= artist.username %></h2>
                <p><%= artist.bio %></p>
                <%end%>
            </div>
        <% end %>
    </div>
</main>        