<div id="show">
    <%= render "/nav_bar" %>

    <%= render "/back_button" %>

    <!-- artwork image -->
    <div class="artwork-image">
        <%= image_tag @content.pic if @content.pic.attached? %>
    </div>

    <h2>
    <%= @content.title %>
    </h2>

    <!-- artwork deets -->
    <section class="artwork-details">
        <p>
            Price:
            <%= @content.price %>
            <% unless @content.order %>
                <button data-stripe="buy">Buy Now!</button>
            <% end %>
        </p>

        <p>
            Artist:
            <%= @content.user.username %>
        </p>

        <p>
            Genre:
            <% if @content.genres.length == 0 %>
                <p> None listed </p>
            <%else%>
                <% @content.genres.each do |genre| %>
                    <%= genre.title %>
                <%end %>
            <%end%>
        </p>

        <p>
            Medium:
            <% if @content.mediums.length == 0 %>
                <p> None listed </p>
            <%else%>
                <% @content.mediums.each do |medium| %>
                     <%= medium.material %>
                <%end%>
            <%end %>
        </p>
    </section>

    <%= link_to 'Edit', edit_content_path(@content) if user_signed_in? and @content.user_id == current_user.id %>
    <%= link_to 'Destroy', @content, method: :delete, data: { confirm: 'Are you sure?' } if user_signed_in? and @content.user_id == current_user.id %>
    <%= link_to 'Back', results_all_path %>

    <script src="https://js.stripe.com/v3/"></script>

    <script>
        document.querySelector("[data-stripe='buy']").addEventListener("click", () => {
            const stripe = Stripe("<%= Rails.application.credentials.dig(:stripe, :public_key) %>");
            
            stripe.redirectToCheckout({
            sessionId: "<%= @session_id %>"
            });
        });
    </script>

    <!-- icon linking to payment -->
    <!-- icon linking to DM -->
    <!-- icon linking to artists profile -->

</div>
    
