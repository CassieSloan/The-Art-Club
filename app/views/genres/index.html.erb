<!-- insert nav bar here -->
 <main id="genre-index">

    <%= render "/nav_bar" %>

    <div class="heading">
        <h1>Sort by genre</h1>
    </div>

    <%= render "/back_button" %>

    
    <nav class="category-search">
        <div class="nav-element">
            <% @genres_all.each do |genre| %>
                <%=link_to genre_path(genre.id), :class => "link-to" do %>
                <p><%=genre.title%></p>
                <%end%>
            <%end%>
        </div>
    </nav>    

    <%= render "/listings" %>
</main>